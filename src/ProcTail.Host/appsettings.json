{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ETW": {
    "EnabledProviders": [
      "Microsoft-Windows-Kernel-FileIO",
      "Microsoft-Windows-Kernel-Process"
    ],
    "EnabledEventNames": [
      "FileIO/Create",
      "FileIO/Write", 
      "FileIO/Read",
      "FileIO/Delete",
      "FileIO/Rename",
      "FileIO/SetInfo",
      "FileIO/Close",
      "Process/Start",
      "Process/Stop"
    ],
    "BufferSizeMB": 64,
    "BufferCount": 20,
    "EventBufferTimeoutMs": 1000,
    "Filtering": {
      "ExcludeSystemProcesses": true,
      "MinimumProcessId": 4,
      "ExcludedProcessNames": [
        "System",
        "Registry",
        "smss.exe",
        "csrss.exe",
        "wininit.exe",
        "winlogon.exe",
        "services.exe",
        "lsass.exe",
        "svchost.exe",
        "dwm.exe"
      ],
      "IncludeFileExtensions": [
        ".txt", ".log", ".cfg", ".conf", ".ini", ".xml", ".json",
        ".exe", ".dll", ".sys", ".bat", ".cmd", ".ps1",
        ".doc", ".docx", ".xls", ".xlsx", ".pdf",
        ".jpg", ".png", ".gif", ".mp4", ".avi",
        ".zip", ".rar", ".7z"
      ],
      "ExcludeFilePatterns": [
        "C:\\Windows\\System32\\*",
        "C:\\Windows\\SysWOW64\\*",
        "C:\\Windows\\WinSxS\\*",
        "C:\\Program Files\\Windows Defender\\*",
        "*\\Temp\\*",
        "*\\$Recycle.Bin\\*",
        "*\\.git\\*",
        "*\\node_modules\\*"
      ]
    },
    "Performance": {
      "EventProcessingBatchSize": 100,
      "MaxEventQueueSize": 10000,
      "EventProcessingIntervalMs": 10,
      "EnableHighFrequencyEvents": false,
      "MaxEventsPerSecond": 1000
    }
  },
  "NamedPipe": {
    "PipeName": "ProcTail",
    "MaxConcurrentConnections": 10,
    "BufferSize": 4096,
    "ResponseTimeoutSeconds": 30,
    "ConnectionTimeoutSeconds": 10,
    "Security": {
      "AllowAdministratorsOnly": true,
      "AllowCurrentUserOnly": false,
      "RequireAuthentication": true,
      "AllowedUsers": [],
      "DeniedUsers": []
    },
    "Performance": {
      "UseAsynchronousIO": true,
      "MaxMessageSize": 1048576,
      "ConnectionPoolSize": 5,
      "EnableLogging": true,
      "LogLevel": "Information"
    }
  },
  "ProcTail": {
    "ServiceName": "ProcTail",
    "DisplayName": "ProcTail Process Monitor",
    "Description": "Monitors process file operations and child process creation using ETW",
    "StartMode": "Automatic",
    "DataDirectory": "Data",
    "MaxEventsPerTag": 1000,
    "EventRetentionDays": 7,
    "EnableMetrics": true,
    "MetricsInterval": "00:01:00",
    "HealthCheckInterval": "00:00:30"
  }
}